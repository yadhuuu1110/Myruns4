<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Input Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Type"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_input_type_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manual Entry"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Activity Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity type"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_activity_type_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_date_time_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:55:46 AM 13-Dec-2025"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_duration_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0:0 Secs"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Distance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_distance_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0 Metric"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Calories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_calories_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Heart Rate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_heart_rate_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Comment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_comment_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp"
                android:minHeight="48dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>